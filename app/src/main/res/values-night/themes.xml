<?xml version="1.0" encoding="utf-8"?>
<!-- res/values-night/themes.xml - রাতের থিম স্টাইলস -->
<resources>
    <!-- ইউটিউব রাতের থিম - মূল থিম কনফিগারেশন -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- ম্যাটেরিয়াল ৩ প্রাইমারি কালার সিস্টেম - মূল রং সেটআপ -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>                    <!-- প্রাইমারি রং - অ্যাপবার, বাটন -->
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>                <!-- প্রাইমারি রঙের উপর টেক্সট -->
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>  <!-- প্রাইমারি কন্টেইনার - FAB ব্যাকগ্রাউন্ড -->
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item> <!-- প্রাইমারি কন্টেইনারের উপর টেক্সট -->
        
        <!-- ম্যাটেরিয়াল ৩ সেকেন্ডারি কালার সিস্টেম - সাহায্যকারী রং -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>                <!-- সেকেন্ডারি রং - চিপস, স্লাইডার -->
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>            <!-- সেকেন্ডারি রঙের উপর টেক্সট -->
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item> <!-- সেকেন্ডারি কন্টেইনার -->
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item> <!-- সেকেন্ডারি কন্টেইনারের উপর টেক্সট -->
        
        <!-- ম্যাটেরিয়াল ৩ টার্শিয়ারি কালার সিস্টেম - তৃতীয় রং -->
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>                  <!-- টার্শিয়ারি রং - একসেন্ট কালার -->
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>              <!-- টার্শিয়ারি রঙের উপর টেক্সট -->
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item> <!-- টার্শিয়ারি কন্টেইনার -->
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item> <!-- টার্শিয়ারি কন্টেইনারের উপর টেক্সট -->
        
        <!-- ম্যাটেরিয়াল ৩ এরর কালার সিস্টেম - ভুল প্রদর্শনের জন্য -->
        <item name="colorError">@color/md_theme_dark_error</item>                        <!-- এরর রং - ডিলিট বাটন, এরর মেসেজ -->
        <item name="colorOnError">@color/md_theme_dark_onError</item>                    <!-- এরর রঙের উপর টেক্সট -->
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>      <!-- এরর কন্টেইনার - এরর বক্স ব্যাকগ্রাউন্ড -->
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>  <!-- এরর কন্টেইনারের উপর টেক্সট -->
        
        <!-- ম্যাটেরিয়াল ৩ সারফেস কালার সিস্টেম - পৃষ্ঠতল রং -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>                    <!-- সারফেস - কার্ড, বটম শিট -->
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>                <!-- সারফেসের উপর টেক্সট -->
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>      <!-- সারফেস ভ্যারিয়েন্ট - লিস্ট আইটেম -->
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>  <!-- সারফেস ভ্যারিয়েন্টের উপর টেক্সট -->
        
        <!-- ম্যাটেরিয়াল ৩ আউটলাইন সিস্টেম - বর্ডার এবং ডিভাইডার -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>                    <!-- আউটলাইন - ইনপুট ফিল্ড বর্ডার -->
        <item name="colorOutlineVariant">@color/md_theme_dark_outlineVariant</item>      <!-- হালকা আউটলাইন - সাবটল ডিভাইডার -->
        
        <!-- ম্যাটেরিয়াল ৩ ব্যাকগ্রাউন্ড সিস্টেম - স্ক্রিন ব্যাকগ্রাউন্ড -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>      <!-- মূল স্ক্রিন ব্যাকগ্রাউন্ড -->
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>          <!-- ব্যাকগ্রাউন্ডের উপর টেক্সট -->
        
        <!-- ম্যাটেরিয়াল ৩ স্পেশাল কালারস - শুধুমাত্র API 31+ এ সাপোর্টেড -->
        <!-- API 31+ এর জন্য আলাদা ফাইলে রাখা হবে -->
        
        <!-- ম্যাটেরিয়াল ৩ শেপ সিস্টেম - UI এলিমেন্টের আকার -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.YouTube.SmallComponent</item>   <!-- ছোট কম্পোনেন্ট - চিপস, বাটন -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.YouTube.MediumComponent</item> <!-- মাঝারি কম্পোনেন্ট - কার্ড -->
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.YouTube.LargeComponent</item>   <!-- বড় কম্পোনেন্ট - বটম শিট -->
        
        <!-- স্ট্যাটাস বার কনফিগারেশন - উপরের স্ট্যাটাস বার -->
        <item name="android:statusBarColor">@color/md_theme_dark_primary</item>              <!-- স্ট্যাটাস বার রং -->
        <item name="android:windowLightStatusBar">false</item>                            <!-- গাঢ় স্ট্যাটাস বার - সাদা আইকন -->
        
        <!-- নেভিগেশন বার কনফিগারেশন - নিচের নেভিগেশন বার -->
        <item name="android:navigationBarColor">@color/md_theme_dark_primary</item>          <!-- নেভিগেশন বার রং -->
        <item name="android:windowLightNavigationBar">false</item>                        <!-- গাঢ় নেভিগেশন বার - সাদা বাটন -->
        
        <!-- উইন্ডো ব্যাকগ্রাউন্ড - মূল উইন্ডোর ব্যাকগ্রাউন্ড -->
        <item name="android:windowBackground">@color/youtube_bg_primary</item>            <!-- উইন্ডো ব্যাকগ্রাউন্ড রং -->
    </style>
    
    <!-- ইউটিউব কার্ড স্টাইল - ভিডিও কার্ডের জন্য -->
    <style name="Widget.YouTube.Card.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/youtube_bg_card</item>                    <!-- কার্ড ব্যাকগ্রাউন্ড রং -->
        <item name="cardCornerRadius">12dp</item>                                         <!-- কার্ডের কোণার বাঁক - ১২ ডিপি -->
        <item name="cardElevation">2dp</item>                                             <!-- কার্ড উচ্চতা - ছায়া ইফেক্ট -->
        <item name="android:layout_margin">8dp</item>                                     <!-- কার্ডের চারপাশে মার্জিন -->
    </style>
    
    <!-- ইউটিউব সাবস্ক্রাইব বাটন স্টাইল - সাবস্ক্রাইব বাটনের জন্য -->
    <style name="Widget.YouTube.Button.Subscribe.Dark" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/youtube_subscribe_red</item>                   <!-- বাটন ব্যাকগ্রাউন্ড - ইউটিউব লাল -->
        <item name="android:textColor">@color/youtube_text_white</item>                   <!-- বাটন টেক্সট - সাদা রং -->
        <item name="cornerRadius">20dp</item>                                             <!-- বাটনের কোণার বাঁক - ২০ ডিপি -->
    </style>
    
    <!-- ইউটিউব আউটলাইন বাটন স্টাইল - বর্ডার সহ বাটন -->
    <style name="Widget.YouTube.Button.Outlined.Dark" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/youtube_divider_strong</item>                     <!-- বাটন বর্ডার রং -->
        <item name="android:textColor">@color/youtube_text_primary</item>                 <!-- বাটন টেক্সট রং -->
        <item name="cornerRadius">20dp</item>                                             <!-- বাটনের কোণার বাঁক -->
    </style>
    
    <!-- ইউটিউব হেডলাইন টেক্সট স্টাইল - শিরোনামের জন্য -->
    <style name="TextAppearance.YouTube.Headline.Dark" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/youtube_text_primary</item>                 <!-- হেডলাইন টেক্সট রং -->
        <item name="android:fontFamily">sans-serif-medium</item>                          <!-- হেডলাইন ফন্ট - মিডিয়াম ওজন -->
    </style>
    
    <!-- ইউটিউব বডি টেক্সট স্টাইল - সাধারণ টেক্সটের জন্য -->
    <style name="TextAppearance.YouTube.Body.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/youtube_text_secondary</item>               <!-- বডি টেক্সট রং - সেকেন্ডারি -->
    </style>
    
    <!-- ইউটিউব ক্যাপশন টেক্সট স্টাইল - ছোট টেক্সটের জন্য -->
    <style name="TextAppearance.YouTube.Caption.Dark" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/youtube_text_tertiary</item>                <!-- ক্যাপশন টেক্সট রং - টার্শিয়ারি -->
    </style>
    
    <!-- ইউটিউব শেপ অ্যাপিয়ারেন্স - UI এলিমেন্টের আকার ডিজাইন -->
    <!-- ছোট কম্পোনেন্ট শেপ - চিপস, ছোট বাটনের জন্য -->
    <style name="ShapeAppearance.YouTube.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>                                          <!-- গোলাকার কোণা -->
        <item name="cornerSize">8dp</item>                                                <!-- কোণার সাইজ - ৮ ডিপি -->
    </style>
    
    <!-- মাঝারি কম্পোনেন্ট শেপ - কার্ড, ডায়ালগের জন্য -->
    <style name="ShapeAppearance.YouTube.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>                                          <!-- গোলাকার কোণা -->
        <item name="cornerSize">12dp</item>                                               <!-- কোণার সাইজ - ১২ ডিপি -->
    </style>
    
    <!-- বড় কম্পোনেন্ট শেপ - বটম শিট, মোডালের জন্য -->
    <style name="ShapeAppearance.YouTube.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>                                          <!-- গোলাকার কোণা -->
        <item name="cornerSize">16dp</item>                                               <!-- কোণার সাইজ - ১৬ ডিপি -->
    </style>
    
    <!-- ইউটিউব টুলবার স্টাইল - অ্যাপবারের জন্য -->
    <style name="Widget.YouTube.Toolbar.Dark" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/youtube_bg_primary</item>                  <!-- টুলবার ব্যাকগ্রাউন্ড -->
        <item name="titleTextColor">@color/youtube_text_primary</item>                    <!-- টুলবার টাইটেল রং -->
        <item name="android:elevation">4dp</item>                                         <!-- টুলবার উচ্চতা - ছায়া ইফেক্ট -->
    </style>
    
    <!-- ইউটিউব বটম নেভিগেশন স্টাইল - নিচের নেভিগেশন মেনু -->
    <style name="Widget.YouTube.BottomNavigation.Dark" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/youtube_bg_primary</item>                  <!-- বটম নেভ ব্যাকগ্রাউন্ড -->
        <item name="itemIconTint">@color/youtube_text_secondary</item>                    <!-- নেভ আইকন রং -->
        <item name="itemTextColor">@color/youtube_text_secondary</item>                   <!-- নেভ টেক্সট রং -->
        <item name="itemActiveIndicatorStyle">@style/Widget.YouTube.BottomNavigation.ActiveIndicator</item> <!-- সক্রিয় আইটেম ইন্ডিকেটর -->
    </style>
    
    <!-- বটম নেভিগেশন অ্যাক্টিভ ইন্ডিকেটর - সক্রিয় মেনু দেখানোর জন্য -->
    <style name="Widget.YouTube.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/youtube_red</item>                              <!-- সক্রিয় ইন্ডিকেটর রং - ইউটিউব লাল -->
    </style>
</resources>